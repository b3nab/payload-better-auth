{
"compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "target": "ES2022",
    "composite": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
}