  "type": "module",
  "keywords": [
    "payload-plugin",
    "payload",
    "cms",
    "plugin",
    "better-auth",
    "security",
    "auth",
    "authentication",
    "authorization"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./nextjs": {
      "import": "./src/nextjs/index.tsx",
      "types": "./src/nextjs/index.tsx",
      "default": "./src/nextjs/index.tsx"
    },
    "./client": {
      "import": "./src/exports/client.ts",
      "types": "./src/exports/client.ts",
      "default": "./src/exports/client.ts"
    },
    "./rsc": {
      "import": "./src/exports/rsc.ts",
      "types": "./src/exports/rsc.ts",
      "default": "./src/exports/rsc.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": ["dist"],
  "scripts": {
    "build": "pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --outDir dist --rootDir ./src --noCheck",
    "clean": "rimraf {dist,*.tsbuildinfo}",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "lint": "eslint",
    "lint:fix": "eslint ./src --fix",
    "publish:local": "pnpm publish --registry http://0.0.0.0:4873 --no-git-checks",
    "prepublishOnly": "pnpm clean && pnpm build",
    "test": "jest -w",
    "test:coverage": "jest --coverage --detectOpenHandles --verbose --forceExit"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/eslintrc": "^3.2.0",
    "@payloadcms/db-mongodb": "latest",
