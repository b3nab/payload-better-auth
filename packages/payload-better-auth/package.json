    "security",
    "auth",
    "authentication",
    "authorization"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "import": "./dist/exports/client.js",
      "types": "./dist/exports/client.d.ts",
      "default": "./dist/exports/client.js"
    },
    "./rsc": {
      "import": "./dist/exports/rsc.js",
      "types": "./dist/exports/rsc.d.ts",
      "default": "./dist/exports/rsc.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^10"
  },
  "peerDependencies": {
    "better-auth": ">=1.3.0 <1.4.0",
    "next": ">=15.0.0 <16.0.0",
    "payload": ">=3.0.0 <4.0.0",
    "react": ">=19.0.0 <20.0.0",
    "react-dom": ">=19.0.0 <20.0.0"
  },
  "dependencies": {
    "@better-auth/stripe": "1.3.9",
    "@better-fetch/fetch": "1.1.18",
    "@fastify/deepmerge": "^3.1.0",
    "@polar-sh/better-auth": "^1.1.3",
    "@polar-sh/sdk": "^0.34.16",
    "@react-email/components": "^0.5.3",
    "better-auth": "1.3.9",
    "better-auth-harmony": "^1.2.5",
    "busboy": "^1.6.0",
    "http-status": "^2.1.0",
    "mongodb": "^6.19.0",
    "pino": "^9.9.5",
    "qrcode": "^1.5.4",
    "resend": "^6.0.3",
    "stripe": "^18.5.0",
    "tiny-invariant": "^1.3.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@electric-sql/pglite": "^0.3.8",
    "@electric-sql/pglite-socket": "^0.0.13",
    "@eslint/eslintrc": "^3.3.1",
    "@jest/globals": "^30.1.2",
    "@payloadcms/db-mongodb": "3.57.0",
    "@payloadcms/db-postgres": "3.57.0",
    "@payloadcms/db-sqlite": "3.57.0",
    "@payloadcms/eslint-config": "3.28.0",
    "@payloadcms/next": "3.57.0",
    "@payloadcms/richtext-lexical": "3.57.0",
    "@payloadcms/ui": "3.57.0",
    "@playwright/test": "^1.55.0",
    "@simplewebauthn/server": "13.1.2",
    "@swc-node/register": "1.11.1",
    "@swc/cli": "0.7.8",
    "@swc/jest": "^0.2.39",
    "@types/node": "^24.3.3",
    "@types/qrcode": "^1.5.5",
    "@types/react": "19.1.13",
    "@types/react-dom": "19.1.9",
    "@vitest/ui": "^3.2.4",
    "copyfiles": "2.4.1",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "graphql": "^16.11.0",
    "jest": "30.1.3",
    "madge": "^8.0.0",
    "mongodb-memory-server": "^10.2.0",
    "nanostores": "1.0.1",
    "next": "15.5.3",
    "open": "^10.2.0",
    "payload": "3.57.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "qs-esm": "7.0.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "rimraf": "6.0.1",
    "sharp": "0.34.3",
    "sort-package-json": "^3.4.0",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "pnpm copyfiles && pnpm build:types && pnpm build:swc",
    "build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
    "build:types": "tsc --extendedDiagnostics --listEmittedFiles --outDir dist --rootDir ./src",
    "build:types:trace": "tsc --extendedDiagnostics --traceResolution --listEmittedFiles --outDir dist --rootDir ./src",
    "clean": "rimraf {dist,*.tsbuildinfo}",
    "copyfiles": "copyfiles -u 1 \"src/**/*.{html,css,scss,ttf,woff,woff2,eot,svg,jpg,png,json}\" dist/",
    "lint": "eslint",
    "lint:fix": "eslint ./src --fix",
    "publish:local": "pnpm publish --registry http://0.0.0.0:4873 --no-git-checks",
    "bump": "pnpx bumpp",
    "prepublishOnly": "pnpm clean && pnpm build",
    "test": "pnpm test:adapter && pnpm test:int && pnpm test:e2e",
    "test:coverage": "jest --coverage --detectOpenHandles --verbose --forceExit",
    "test:wrapdb": "sh -c 'pglite-server --port=54321 --run \"$0\" --include-database-url'",
    "test:int": "vitest run tests/integration",
    "test:adapter": "vitest run tests/adapter",
    "test:adapter:watch": "vitest tests/adapter",
    "test:adapter:ui": "vitest --ui tests/adapter",
    "test:e2e": "echo playwright test",
    "...DEV...": "",
    "dev:OLD": "pnpm local:up -d && payload run ./dev/server.ts | pino-pretty",
    "dev:all:OLD": "pnpm local:up -d && pnpm dev:sync && payload run ./dev/server.ts | pino-pretty",
    "dev": "pnpm dev:sync && tsx ./dev/server.ts | pino-pretty",
    "dev:all": "pnpm local:up -d && pnpm dev:sync && next dev | pino-pretty",
    "dev:sync": "pnpm dev:generate-importmap && pnpm dev:generate-types",
    "dev:generate-importmap": "pnpm dev:payload generate:importmap",
    "dev:generate-types": "pnpm dev:payload generate:types",
    "dev:payload": "cross-env NODE_OPTIONS=--no-deprecation PAYLOAD_CONFIG_PATH=./dev/payload.config.ts payload",
    "local:up": "docker-compose -f ./dev/compose.local.yml up"
  },
  "registry": "https://registry.npm.abbenanti.com/",
  "publishConfig": {
    "registry": "https://registry.npm.abbenanti.com/",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "./client": {
        "import": "./dist/exports/client.js",
        "types": "./dist/exports/client.d.ts",
        "default": "./dist/exports/client.js"
      },
      "./rsc": {
        "import": "./dist/exports/rsc.js",
        "types": "./dist/exports/rsc.d.ts",
        "default": "./dist/exports/rsc.js"
      }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts"
  }
}