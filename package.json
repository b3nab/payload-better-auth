{
  "name": "workspace-payload-better-auth",
  "version": "0.0.0",
  "description": "A Payload CMS 3 plugin for Better Auth",
  "author": {
    "name": "Benedetto Abbenanti",
    "url": "https://ben.abbenanti.com"
  },
  "bugs": {
    "url": "https://github.com/b3nab/payload-better-auth/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b3nab/payload-better-auth"
  },
  "homepage": "https://payload-better-auth.abbenanti.com",
  "license": "AGPL-3.0-only",
  "keywords": [
    "payload-plugin",
    "payload",
    "cms",
    "plugin",
    "better-auth",
    "security",
    "auth",
    "authentication",
    "authorization"
  ],
  "scripts": {
    "---DEMO---": "",
    "demo--": "pnpm --filter demo-app",
    "demo": "pnpm demo-- dev:all",
    "--DOCS--": "",
    "docs--": "pnpm --filter docs",
    "docs:dev": "pnpm docs-- dev",
    "docs:build": "pnpm docs-- build",
    "--DEV--": "",
    "dev": "pnpm plugin-- dev",
    "---PLUGIN---": "",
    "plugin--": "pnpm --filter @b3nab/payload-better-auth",
    "test": "pnpm plugin-- test",
    "test:adapter": "pnpm plugin-- test:adapter",
    "test:int": "pnpm plugin-- test:int",
    "test:coverage": "pnpm plugin-- test:coverage",
    "build": "pnpm plugin-- build",
    "build:types": "pnpm plugin-- build:types",
    "build:types:trace": "pnpm plugin-- build:types:trace",
    "bump": "pnpm plugin-- bump",
    "pub": "pnpm publish --filter @b3nab/payload-better-auth",
    "pub:local": "pnpm plugin-- publish:local",
    "ye": "pnpm test && pnpm build && pnpm bump && pnpm pub",
    "yeah": "pnpm test && pnpm build && pnpm bump && pnpm pub --no-git-checks",
    "yolo": "pnpm build && pnpm bump && pnpm pub --no-git-checks"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  },
  "packageManager": "pnpm@10.17.1"
}